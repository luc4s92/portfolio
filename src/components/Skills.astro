---
import { skills } from "@/data/skills";
---

<section>
  <div class="w-full mx-auto py-20">
    <div
      class="border-2 border-purple-primary bg-gradient-to-t from-purple-primary/10 to-purple-secundary/40 rounded-3xl p-12"
    >
      <div class="grid md:grid-cols-2 gap-16">
        {
          skills.map((group) => (
            <div>
              <h3 class="text-lg text-gray-200 font-medium mb-4">
                {group.title}
              </h3>

              {group.skills.length > 0 && (
                <div class="flex items-center gap-4 mb-4">
                  {group.skills.map((skill) => (
                    <img
                      src={skill.icon}
                      alt={skill.name}
                      title={skill.name}
                      class="w-8 h-8 opacity-80 hover:opacity-100 transition"
                    />
                  ))}
                </div>
              )}

              <p class="text-sm text-gray-400 leading-relaxed">
                {group.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
  <p class="text-sm text-gray-400 mb-12 max-w-xl text-center mx-auto">
    Technologies and engineering practices I work with and continuously refine.
  </p>
</section>
