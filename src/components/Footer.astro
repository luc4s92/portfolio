---
import Github from "@/components/icons/Github.astro";
import Heart from "@/components/icons/Heart.astro";
import Linkedin from "@/components/icons/Linkedin.astro";
import Mail from "@/components/icons/Mail.astro";
---

<footer
  class="w-full h-40 flex flex-col items-start justify-center max-w-5xl px-5 xl:max-w-7xl text-base mx-auto my-10 text-[#cddff0]"
>
  <div
    class="w-full h-full bg-primary-blue rounded-3xl flex items-center justify-between px-10"
  >
    <div class="flex flex-col items-start opacity-50 max-w-[50%] lg:max-w-fit">
      <p>© 2024 Lucas González. All rights reserved.</p><p
        class="items-center gap-2 hidden lg:flex"
      >
        Made with love <Heart /> and Astro
      </p>
    </div><div class="flex flex-col-reverse gap-3 items-end">
      <p class="opacity-50 hidden lg:flex">
        Last update: Saturday, 29 June 2024
      </p><div class="flex items-center gap-2 text-xl">
        <a
          class="flex items-center font-medium"
          href="mailto:luc4s92.g@gmail.com"
          title="Email me"
        >
          <Mail />
        </a><a
          class="flex items-center font-medium"
          href="https://www.linkedin.com/in/lucas-gonzalez-678631124/"
          target="_blank"
          rel="noreferrer"
          title="LinkedIn"
        >
          <Linkedin />
        </a>
        <a
          class="flex items-center font-medium"
          href="https://github.com/luc4s92"
          target="_blank"
          rel="noreferrer"
          title="LinkedIn"
        >
          <Github />
        </a>
      </div>
    </div>
  </div>
</footer>
